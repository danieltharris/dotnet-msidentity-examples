{
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "TenantId": "common", //We are using common here because we want to support both work and school accounts as well as personal MS
    "CallbackPath": "/signin-oidc",

    "Domain": "{SET IN USER SECRETS}", //Set this to the domain of your tenant. Entra ID > Overview > Primary Domain
    "ClientId": "{SET IN USER SECRETS}",
    "ClientSecret": "{SET IN USER SECRETS}"
  },
  "MicrosoftGraph": {
    "BaseUrl": "https://graph.microsoft.com/v1.0",
    "Scopes": "user.read"
  },
  "DownstreamApi": {
    "BaseUri": "https://localhost:7269/", //This is the base URI of the downstream API, which is the other project in this solution
    "Scope": "{SET IN USER SECRETS}"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
