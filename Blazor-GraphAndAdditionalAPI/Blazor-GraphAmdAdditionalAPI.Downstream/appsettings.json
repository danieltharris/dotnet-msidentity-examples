{
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "TenantId": "common", //We are using common here because we want to support both work and school accounts as well as personal MS
    "Scopes": "access_as_user", //This scope needs to match the scope set in the app registration
    "CallbackPath": "/signin-oidc",

    "Domain": "{SET IN CLIENT SECRETS}",
    "ClientId": "{SET IN CLIENT SECRETS}"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
